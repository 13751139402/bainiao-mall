<!--pages/cart/index.wxml-->
<!-- 收货地址 -->
<view class="revice_addres_row">
  <!-- 当收获地址 不存在 按钮显示 对象 空对象bool 类型 也是true -->
  <view class="address_btn" wx:if="{{!address.userName}}">
    <button type="primary" plain bindtap="handleChooseAddress">获取收获地址</button>
  </view>
  <!-- 当收获地址 存在 详细信息就显示 -->
  <view wx:else class="user_info_row">
    <view class="user_info">
      <view>{{address.userName}}</view>
      <view>{{address.all}}</view>
    </view>
    <view class="user_phone">{{address.telNumber}}</view>
  </view>
</view>

<!-- 购物车内容 -->
<view class="cart_content">
  <view class="cart_title">购物车</view>
  <view class="cart_main">
    <view class="cart_item" wx:for="{{cart}}"
    wx:key="goods_id">
    <!-- 复选框 -->
    <view class="cart_chk_wrap">
      <checkbox-group bindchange="">
        <checkbox checkbox="item.checked"></checkbox>
      </checkbox-group>
    </view>
    <!-- 商品图片 -->
    <naviagtor class="cart_img_wrap">
      <image mode="widthFix"  src="{{item.goods_small_logo}}"></image>
    </naviagtor>
    <!-- 商品信息 -->
    <view class="cart_info_wrap">
      <view class="goods_name">{{item.goods_name}}</view>
      <view class="goods_price_wrap">
       <view class="goods_price">￥{{item.goods_price}}</view>
       <view class="cart_num_tool">
        <view class="num_eidt">-</view>
        <view class="goods_num">{{item.num}}</view>
        <view class="num_eidt">+</view>
       </view>
      </view>
    </view>
    </view>
  </view>
</view>

<!-- 底部工具栏 -->
<view class="footer_tool">
  <!-- 全部 -->
  <view class="all_chk_wrap">
    <checkbox-group bindchange="">
    <checkbox>全选</checkbox>
    </checkbox-group>
  </view>
  <!-- 总价格 -->
  <view class="total_price_wrap">
    <view class="total_price">
      合计:<text class="total_price_text">￥999</text>
    </view>
    <view>包含运费</view>
  </view>
  <!-- 结算 -->
  <view class="order_pay_wrap">结算(2)</view>
</view>
